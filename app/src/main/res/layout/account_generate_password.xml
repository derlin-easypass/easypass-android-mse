<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!--gridlayout with two columns-->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="4dp"
        android:columnCount="2"
        android:useDefaultMargins="false">

        <!--size-->
        <TextView
            style="@style/details_label"
            android:text="Size" />

        <EditText
            android:id="@+id/generate_password_size"
            android:maxLines="1"
            android:inputType="text"
            android:scrollHorizontally="true" />

        <!--show password-->
        <CheckBox
            style="@style/details_font"
            android:id="@+id/generate_password_special_chars"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Special chars"
            />

        <!--result-->
        <EditText
            android:id="@+id/generate_password_result"
            android:maxLines="1"
            android:inputType="text"
            android:scrollHorizontally="true" />

    </GridLayout>
</LinearLayout>