<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_border_gradient"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    android:paddingStart="20dip"
    android:paddingEnd="20dip"
    android:paddingTop="5dip"
    android:paddingBottom="5dip">

    <TextView
        android:id="@+id/account_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/account_favorite"
        android:layout_marginBottom="1dip"
        android:layout_marginStart="5dip"
        android:text="Dropbox" />

    <TextView
        android:id="@+id/account_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_title"
        android:layout_toEndOf="@id/account_favorite"
        android:layout_marginStart="5dip"
        android:text="04.03.2014" />

    <!--<ImageButton-->
        <!--android:id="@+id/account_fae"-->
        <!--android:layout_width="40dip"-->
        <!--android:layout_height="40dip"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginEnd="5dip"-->
        <!--android:backgroundTint="#777"-->
        <!--android:background="@drawable/ic_visibility_on_24dp" />-->

    <ImageButton
        android:id="@+id/account_favorite"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dip"
        android:background="@drawable/ic_pinned_off" />

</RelativeLayout>